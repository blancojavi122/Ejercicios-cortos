import java.util.Arrays;
import java.util.Scanner;

public class CapturaPokemon {
    public static void main(String[] args) {
        //Array pokemons capturados
        String[] pokemonscapturados = new String[5];

        Scanner sc = new Scanner(System.in);
        for (int i = 0; i < pokemonscapturados.length; i++) {
            System.out.print("Introduce el nombre del Pokemon Nº" + (i + 1) + ": ");
            pokemonscapturados[i] = sc.nextLine();
        } for (int i = pokemonscapturados.length - 1; i >= 0; i--) {
            System.out.println("Pokemon Nº" +(i +1) + ": " + (pokemonscapturados[i]));
        }
    }
}
