import java.util.Random;
import java.util.Scanner;

public class ArrayAleatorio {
    public static void main(String[] args) {

        //Pedir número de elementos
        Scanner sc = new Scanner(System.in);
        System.out.println("¿Cuántos elementos quieres que tenga el array?");
        double[] array = new double[sc.nextInt()];

        //Pedir números mínimos y máximos
        System.out.println("Dime el valor mínimo del número aleatorio");
        double valorMínimo = sc.nextDouble();
        System.out.println("Dime el valor máximo del número aleatorio");
        double valorMáximo = sc.nextDouble();

        for (int i =0; i<array.length; i++){
            //El número aleatorio se multiplica por el rango y se suma el valor mínimo para desplazarlo a este
            array[i] = (double)(Math.random()*(valorMáximo - valorMínimo)) + valorMínimo;
        }

        //Imprimir array
        System.out.println("Array generado:");
        for (double num : array) {
            System.out.print(num + " ");
        }
    }
}
