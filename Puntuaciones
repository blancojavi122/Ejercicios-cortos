public class Puntuaciones {
    public static void main(String[] args) {
        int[] Puntuaciones = new int[6];
        Puntuaciones[0] = 320;
        Puntuaciones[1] = 450;
        Puntuaciones[2] = 210;
        Puntuaciones[3] = 700;
        Puntuaciones[4] = 250;
        Puntuaciones[5] = 300;

        int puntuacionTotal = 0;
        int mayorPuntuacion = Puntuaciones[0]; 

        for (int i = 0; i < Puntuaciones.length; i++) {
            puntuacionTotal += Puntuaciones[i];

            if (Puntuaciones[i] > mayorPuntuacion) {
                mayorPuntuacion = Puntuaciones[i];
            }
        }

        double mediaPuntos = (double) puntuacionTotal / Puntuaciones.length;

        System.out.println("Puntuación total: " + puntuacionTotal);
        System.out.println("Mayor puntuación: " + mayorPuntuacion);
        System.out.println("Media de puntos: " + mediaPuntos);
    }
}
